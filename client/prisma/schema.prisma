generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = []
  binaryTargets   = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String             @id @default(cuid())
  email               String             @unique
  name                String?
  hashedPassword      String?
  role                UserRole           @default(BUSINESS_OWNER)
  emailVerified       DateTime?
  image               String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  accounts            Account[]
  accountantProfile   AccountantProfile?
  bankAccounts        BankAccount[]
  ownedBusinesses     Business[]         @relation("BusinessOwner")
  businesses          BusinessMember[]
  businessProfile     BusinessProfile?
  categories          Category[]
  documents           Document[]
  reports             Report[]
  sessions            Session[]
  subscriptions       Subscription[]
  assignedTasks       Task[]             @relation("TaskAssignee")
  tasks               Task[]             @relation("TaskCreator")
  receivedInvitations TeamInvitation[]   @relation("InvitationReceiver")
  sentInvitations     TeamInvitation[]   @relation("InvitationSender")
  transactions        Transaction[]      @relation("TransactionCreator")
  reconReviews        ReconciliationStatus[] @relation("ReconciliationReviewer")
  generatedReports    ReportData[]       @relation("ReportGenerator")
  invitedMembers      BusinessMember[]   @relation("BusinessMemberInviter")
  passwordResetTokens PasswordResetToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BusinessProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  businessName String?
  industry     String?
  address      String?
  taxId        String?
  phone        String?
  website      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AccountantProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  firmName         String?
  certifications   String?
  professionalInfo String?
  address          String?
  phone            String?
  website          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Business {
  id           String           @id @default(cuid())
  name         String
  industry     String?
  address      String?
  taxId        String?
  phone        String?
  website      String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  ownerId      String
  bankAccounts BankAccount[]
  owner        User             @relation("BusinessOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members      BusinessMember[]
  categories   Category[]
  documents    Document[]
  reports      Report[]
  reportData   ReportData[]   @relation("ReportData")
  tasks        Task[]
  transactions Transaction[]
  invitations  TeamInvitation[]
  usage        Usage[]
}

model BusinessMember {
  id          String              @id @default(cuid())
  businessId  String
  userId      String
  role        String              // Keep for backward compatibility
  accessLevel BusinessAccessLevel @default(VIEW_ONLY)
  permissions Json?               // Additional granular permissions if needed
  invitedBy   String?             // Who invited this member
  invitedAt   DateTime?           // When they were invited
  joinedAt    DateTime?           // When they accepted the invitation
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  business    Business            @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  inviter     User?               @relation("BusinessMemberInviter", fields: [invitedBy], references: [id])

  @@unique([businessId, userId])
}

model TeamInvitation {
  id             String           @id @default(cuid())
  businessId     String?
  email          String
  status         InvitationStatus @default(PENDING)
  role           String
  senderId       String
  receiverId     String?
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  token          String               @unique @default(cuid())
  invitationType InvitationType
  accessLevel    BusinessAccessLevel  @default(VIEW_ONLY)
  businessName   String?              // For new businesses
  clientName     String?              // Name of the person being invited
  
  receiver       User?            @relation("InvitationReceiver", fields: [receiverId], references: [id])
  sender         User             @relation("InvitationSender", fields: [senderId], references: [id], onDelete: Cascade)
  business       Business?        @relation(fields: [businessId], references: [id])

  @@unique([email, businessId], name: "email_businessId")
  @@index([token])
  @@index([senderId])
  @@index([status])
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String
  status               SubscriptionStatus @default(FREE)
  plan                 String?            @default("free")
  planId               String?
  planName             String?
  priceId              String?
  amount               Float?
  currency             String?            @default("CAD")
  interval             String?
  stripeCustomerId     String?
  stripeSubscriptionId String?
  startsAt             DateTime?
  endsAt               DateTime?
  canceledAt           DateTime?
  transactionLimit     Int?               // null means unlimited
  bankAccountLimit     Int?               // null means unlimited
  documentUploadLimit  Int?               // null means unlimited
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  payments             Payment[]
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, planId])
}

model Payment {
  id              String        @id @default(cuid())
  subscriptionId  String
  status          PaymentStatus @default(PENDING)
  amount          Float
  currency        String        @default("CAD")
  stripePaymentId String?
  stripeInvoiceId String?
  paymentDate     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  subscription    Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
}

model Usage {
  id                  String   @id @default(cuid())
  businessId          String
  month               DateTime // First day of the month
  transactionCount    Int      @default(0)
  documentUploadCount Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  business            Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  @@unique([businessId, month])
  @@index([businessId])
}

model BankAccount {
  id               String        @id @default(cuid())
  businessId       String
  userId           String
  name             String
  accountNumber    String?
  routingNumber    String?
  institution      String?
  balance          Float?
  currency         String        @default("CAD")
  plaidItemId      String?
  plaidAccessToken String?
  lastSync         DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  business         Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions     Transaction[]
  
  @@index([plaidAccessToken])
  @@index([businessId, userId])
}

model Category {
  id            String          @id @default(cuid())
  businessId    String
  name          String
  accountCode   String          // GL Account number (e.g., "1000", "4000") - now required
  accountType   AccountType     // Primary account type
  description   String?
  color         String?
  icon          String?
  isDefault     Boolean         @default(false)
  isActive      Boolean         @default(true)
  parentId      String?
  sortOrder     Int?            // For ordering accounts in reports
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  creatorId     String
  business      Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  creator       User            @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  parent        Category?       @relation("SubCategories", fields: [parentId], references: [id])
  subCategories Category[]      @relation("SubCategories")
  transactions  Transaction[]
  journalEntries JournalEntry[]

  @@unique([businessId, accountCode])
  @@index([businessId, accountType])
  @@index([businessId, sortOrder])
}

model Transaction {
  id            String          @id @default(cuid())
  businessId    String
  bankAccountId String?
  categoryId    String?
  type          TransactionType
  amount        Float
  currency      String          @default("CAD")
  date          DateTime
  description   String?
  notes         String?
  reference     String?
  status        String?
  isReconciled  Boolean         @default(false)
  confidence    Float?
  isFlagged     Boolean         @default(false)
  externalId    String?
  createdById   String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  documents     Document[]
  matches       DocumentMatch[]
  reconciliation ReconciliationStatus?
  journalEntries JournalEntry[]
  bankAccount   BankAccount?    @relation(fields: [bankAccountId], references: [id])
  business      Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  category      Category?       @relation(fields: [categoryId], references: [id])
  createdBy     User            @relation("TransactionCreator", fields: [createdById], references: [id], onDelete: Cascade)
  
  @@index([businessId, externalId])
  @@index([businessId, date])
  @@index([bankAccountId, date])
}

model JournalEntry {
  id              String      @id @default(cuid())
  transactionId   String
  accountId       String      // Reference to Category (Chart of Accounts)
  debitAmount     Float       @default(0)
  creditAmount    Float       @default(0)
  description     String?     // Optional line-item description
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  account         Category    @relation(fields: [accountId], references: [id])
  
  @@index([transactionId])
  @@index([accountId])
}

model Document {
  id            String       @id @default(cuid())
  businessId    String
  userId        String
  name          String
  type          DocumentType
  url           String
  size          Int
  mimeType      String?
  transactionId String?
  verifiedAt    DateTime?
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  // Processing fields
  processingStatus    ProcessingStatus @default(PENDING)
  extractedData       Json?           // Structured data from AI
  processingError     String?
  
  // S3 storage
  s3Bucket           String?
  s3Key              String?
  originalFileName   String?
  
  // Receipt-specific extracted data
  extractedAmount    Float?
  extractedDate      DateTime?
  extractedVendor    String?
  extractedTax       Float?
  extractedCurrency  String?
  
  business      Business     @relation(fields: [businessId], references: [id], onDelete: Cascade)
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  matches       DocumentMatch[]
  reconciliation ReconciliationStatus[]
}

model DocumentMatch {
  id              String  @id @default(cuid())
  documentId      String
  transactionId   String
  confidence      Float   // 0-1 score
  status          MatchStatus @default(SUGGESTED)
  matchReason     String? // AI explanation
  isUserConfirmed Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  document        Document    @relation(fields: [documentId], references: [id], onDelete: Cascade)
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  
  @@unique([documentId, transactionId])
}

model Report {
  id                String    @id @default(cuid())
  businessId        String
  userId            String
  name              String
  type              String
  dateRange         String?
  startDate         DateTime?
  endDate           DateTime?
  format            String?
  url               String?
  isScheduled       Boolean   @default(false)
  scheduleFrequency String?
  lastGenerated     DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  business          Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String       @id @default(cuid())
  businessId  String
  title       String
  description String?
  status      TaskStatus   @default(PENDING)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  creatorId   String
  assigneeId  String?
  completedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignee    User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  business    Business     @relation(fields: [businessId], references: [id], onDelete: Cascade)
  creator     User         @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
}

model ReconciliationStatus {
  id            String @id @default(cuid())
  transactionId String @unique
  documentId    String?
  status        ReconciliationStatusType @default(UNMATCHED)
  confidence    Float?
  manuallySet   Boolean @default(false)
  notes         String?
  reviewedBy    String?
  reviewedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  document      Document? @relation(fields: [documentId], references: [id])
  reviewer      User? @relation("ReconciliationReviewer", fields: [reviewedBy], references: [id])
}

model ReportData {
  id          String @id @default(cuid())
  businessId  String
  type        ReportType
  title       String
  data        Json
  parameters  Json
  period      String
  startDate   DateTime
  endDate     DateTime
  generatedAt DateTime @default(now())
  generatedBy String
  isScheduled Boolean @default(false)
  scheduleCron String?
  
  business    Business @relation("ReportData", fields: [businessId], references: [id], onDelete: Cascade)
  generator   User @relation("ReportGenerator", fields: [generatedBy], references: [id])
}

enum UserRole {
  BUSINESS_OWNER
  ACCOUNTANT
  ADMIN
}

enum BusinessAccessLevel {
  VIEW_ONLY           // Can view all data but not modify
  FULL_MANAGEMENT     // Can view and modify all data (like business owner)
  FINANCIAL_ONLY      // Can manage financial data (transactions, bank accounts)
  DOCUMENTS_ONLY      // Can manage documents and receipts
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  PAST_DUE
  FREE
}

enum PaymentStatus {
  SUCCESS
  FAILED
  PENDING
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum InvitationType {
  NEW_USER               // User doesn't exist in system
  EXISTING_NO_BUSINESS   // User exists but has no business
  EXISTING_WITH_BUSINESS // User exists and owns a business
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

enum DocumentType {
  RECEIPT
  INVOICE
  STATEMENT
  OTHER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum MatchStatus {
  SUGGESTED
  CONFIRMED
  REJECTED
  MANUAL
}

enum ReconciliationStatusType {
  UNMATCHED
  MATCHED
  PARTIALLY_MATCHED
  PENDING_REVIEW
  MANUALLY_MATCHED
  EXCLUDED
}

enum ReportType {
  PROFIT_LOSS
  BALANCE_SHEET
  CASH_FLOW
  EXPENSE_CATEGORIES
  RECONCILIATION_SUMMARY
  TAX_SUMMARY
  MONTHLY_SUMMARY
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?
  
  @@index([userId])
  @@index([token])
}
